@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model HarryPotter.Pages.IndexModel

@{
    Layout = "_Layout";
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
}

<div class="text-center">
    <h1 class="display-4">Harry Potter - UNDER CONSTRUCTION</h1>
    <img src="https://i.imgur.com/GNtAFrh.jpeg" width="1000" />
</div>
<br />
<br />
<div>
    <section>
        <h2>Sorting Hat</h2>
        <img src="https://i.imgur.com/o0HDcDc.png" width="150"/>
        <p>Welcome to Hogwarts School for Witchcraft and Wizardry! All students are sorted into one of four Houses upon arrival at Hogwarts. </p>
    <form method="post">
        @*<input asp-for="House" />*@
        <p>Please press Submit so the Sorting Hat can decide which house you are best suited for at Hogwarts</p>
        <br />
        <input type="submit" />
        <br />
        <br />
        <p>Congratulations! The Sorting Hat has placed you in @Model.House !</p>
    </form>
    </section>
</div>

<div>
    <section>
        <h3>The Four Hogwarts Houses Are: </h3>
        @foreach(var h in Model.HouseObjects)
        {
            <p>@h.Id</p>
            <p>@h.HouseName</p>
            <p>@h.Mascot</p>
            <p>@h.Values</p>
        }
    </section>
    <section>
        <h3>The Four Houses Are: </h3>
        @foreach(HarryPotter.Models.HouseObject s in Model.HouseObjects)
        {
            <p>@s.Id</p>
            <p>@s.HouseName</p>
            <br />
        }
    </section>
</div>
